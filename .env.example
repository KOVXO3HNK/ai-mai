# Backend Environment Variables
# Copy this file to .env and fill in your values

# Google GenAI API Key (required)
# Get it from: https://ai.google.dev/
API_KEY=your_google_genai_api_key_here

# Telegram Bot Token (required for payment features)
# Get it from: @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Telegram Webhook Secret (recommended for security)
# Generate a random string for production
TELEGRAM_WEBHOOK_SECRET=your_random_webhook_secret_here

# Server Port (optional, defaults to 3001)
# On Render, this is set automatically
PORT=3001
